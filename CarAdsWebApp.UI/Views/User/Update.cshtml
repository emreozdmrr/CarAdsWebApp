@model UserUpdateModel

@{
	Layout = "_Layout";
}


<div class="container py-5 rounded-lg d-flex justify-content-center">
	<form id="advertisementForm" class="w-75 bg-light px-5 py-3" style="border-radius:50px; overflow:hidden;" asp-action="Update" asp-controller="User" method="post">
		<input type="hidden" asp-for="@Model.Id" />
		@if (ViewBag.Result != null)
		{
			<div class="alert alert-info text-center">
				@ViewBag.Result
			</div>
		}
		<div class="mt-5 mb-3 d-flex justify-content-center">
			<label class="font-weight-bold h4 text-primary">KULLANICI BİLGİLERİ GÜNCELLEME</label>
		</div>
		<div class="mb-3">
			<label class="form-label">Kullanıcı Adı:</label>
			<input type="text" class="form-control" asp-for="@Model.Username" readonly>
		</div>
		<div class="mb-3">
			<label class="form-label">İsim</label>
			<input type="text" class="form-control" asp-for="@Model.Firstname" />
		</div>
		<div class="mb-3">
			<label class="form-label">Soyisim</label>
			<input type="text" class="form-control" asp-for="@Model.Surname" />
		</div>
		<div class="mb-3">
			<label class="form-label">Email</label>
			<input type="email" class="form-control" asp-for=@Model.Email readonly>
		</div>
		<div class="mb-3">
			<label class="form-label">Telefon</label>
			<input type="number" class="form-control" asp-for="@Model.PhoneNumber" />
		</div>
		<div class="mb-3">
			<label class="form-label">Şifre</label>
			<input type="password" class="form-control" asp-for="@Model.Password" value="@Model.Password" />
		</div>
		<div class="mb-3 text-end">
			<button type="submit" class="btn btn-success btn-lg">Değişiklikleri Kaydet</button>
		</div>
		<div class="mb-3 text-danger" asp-validation-summary="All">
		</div>
	</form>
</div>