@model AppUserLoginDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <form asp-action="SignIn" asp-controller="User" method="post" class="p-4 w-25 mx-auto">
        
        <div class="mb-3">
            <label>Kullanıcı Adı: </label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifre: </label>
            <input asp-for="@Model.Password" class="form-control" type="password" />
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe" />
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>
        <div class="text-danger" asp-validation-summary="All">
        </div>
    </form>
</div>


